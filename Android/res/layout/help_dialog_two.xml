<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:scrollbars="vertical"
    android:maxLines="10"  >
	
    <ImageView  
        android:id="@+id/dummy_locate_button"
        android:layout_width="125sp"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp"
        android:src="@drawable/ic_launcher"/>
    
    <TextView
        android:id="@+id/helpTextViewTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you see the button that looks like this up in the top left corner? It will open a fancy sliding menu with more features!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <Button
        android:id="@+id/help_two_back_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="backToDialogOne"
        android:text="Back" />
    <Button 
        android:id="@+id/help_next_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="showHelpDialogThree"
        android:text="Next: Markers" />
    
    

</LinearLayout>